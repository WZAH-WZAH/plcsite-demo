# Django
DJANGO_SECRET_KEY=change-me
DJANGO_DEBUG=1
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# CORS (optional)
DJANGO_CORS_ALLOWED_ORIGINS=http://localhost:5173

# CSRF (optional; when DEBUG=0 and you use a custom domain)
# Example: https://your-domain.com
# DJANGO_CSRF_TRUSTED_ORIGINS=https://your-domain.com

# Database (optional; default uses sqlite)
# DJANGO_DATABASE_URL=postgres://USER:PASSWORD@HOST:5432/DBNAME

# JWT
DJANGO_JWT_ACCESS_MINUTES=30
DJANGO_JWT_REFRESH_DAYS=14

# Webhook shared secrets (strongly recommended in production)
# If set, callers must pass header: X-Webhook-Secret: <secret>
# DJANGO_PAYMENTS_WEBHOOK_SECRET=change-me
# DJANGO_TG_SYNC_SECRET=change-me
