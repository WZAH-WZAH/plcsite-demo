{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev:backend",
      "type": "shell",
      "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
      "args": [
        "manage.py",
        "runserver",
        "127.0.0.1:8000"
      ],
      "options": {
        "cwd": "${workspaceFolder}\\backend"
      },
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": false
      }
    },
    {
      "label": "dev:frontend",
      "type": "shell",
      "command": "C:\\Program Files\\nodejs\\npm.cmd",
      "args": [
        "run",
        "dev",
        "--",
        "--host",
        "127.0.0.1",
        "--port",
        "5173",
        "--strictPort"
      ],
      "options": {
        "cwd": "${workspaceFolder}\\frontend",
        "env": {
          "PATH": "C:\\Program Files\\nodejs;${env:PATH}"
        }
      },
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": false
      }
    },
    {
      "label": "dev:all",
      "dependsOn": [
        "dev:backend",
        "dev:frontend"
      ],
      "dependsOrder": "parallel",
      "problemMatcher": []
    }
  ]
}
